<Window x:Class="FilesOrganizer.Views.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input Window" Height="150" Width="300">
    
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="Search word:" Margin="0 0 0 20"/>
        <TextBox x:Name="inputTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Margin="0 0 0 20"/>
        <Button x:Name="submitButton" Content="Submit" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Click="SubmitButton_Click"/>
    </StackPanel>
</Window>
